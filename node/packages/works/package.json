{
  "name": "portfolio-works",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "main": "build/index.js",
  "scripts": {
    "build": "npm run build:styles && npm run build:remix",
    "build:styles": "tsc --noEmit ./styles/**/*.ts && vite build",
    "build:remix": "remix build",
    "deploy": "npm run build && wrangler publish",
    "dev:remix": "remix watch",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "_dev:styles": "vite build --base /styles --watch",
    "dev": "npm run build:remix && run-p dev:*",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.2.0",
    "@remix-run/cloudflare": "^1.5.1",
    "@remix-run/cloudflare-workers": "^1.5.1",
    "@remix-run/css-bundle": "^2.5.1",
    "@remix-run/react": "^1.5.1",
    "cross-env": "^7.0.3",
    "portfolio-styles": "workspace:*",
    "portfolio-ui": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.10.0",
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "miniflare": "^2.5.0",
    "npm-run-all": "^4.1.5",
    "wrangler": "^2.0.7"
  },
  "engines": {
    "node": ">=16.7.0"
  }
}
