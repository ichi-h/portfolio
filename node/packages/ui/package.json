{
  "name": "portfolio-ui",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/portfolio-ui.umd.js",
  "module": "./dist/portfolio-ui.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/portfolio-ui.es.js",
      "require": "./dist/portfolio-ui.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "tsc --noEmit && vite build",
    "build:storybook": "NODE_OPTIONS=--max_old_space_size=4096 storybook build",
    "deploy:storybook": "wrangler pages deploy ./storybook-static --project-name portfolio-ui"
  },
  "dependencies": {
    "@storybook/test": "^8.0.0",
    "portfolio-styles": "workspace:*"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^8.0.0",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/blocks": "^8.0.0",
    "@storybook/react": "^8.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@storybook/test-runner": "^0.17.0",
    "storybook": "^8.0.0"
  }
}
